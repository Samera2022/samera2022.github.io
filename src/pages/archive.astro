---
import { getCollection } from "astro:content";
import ArchivePanel from "@components/ArchivePanel.svelte";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPostsList } from "../utils/content-utils";

const sortedPostsList = await getSortedPostsList();

// Get category from URL query parameter
const categoryParam = new URL(Astro.request.url).searchParams.get("category");
let categoryEntry: any = null;
let categoryContent: any = null;

if (categoryParam) {
	try {
		const allCategories = await getCollection("categories");
		categoryEntry = allCategories.find(cat => cat.slug === categoryParam);
		if (categoryEntry) {
			categoryContent = await categoryEntry.render();
		}
	} catch (e) {
		// categories collection doesn't exist or error
	}
}
---

<MainGridLayout title={categoryEntry?.data?.title || i18n(I18nKey.archive)}>
	{categoryEntry && categoryContent && (
		<>
			<div class="card-base rounded-lg overflow-hidden px-6 md:px-9 pt-6 pb-6">
				<Markdown class="prose">
					<categoryContent.Content />
				</Markdown>
			</div>
			<div class="py-4 text-lg font-bold text-center text-75">
				{i18n(I18nKey.postsInCategory)}
			</div>
		</>
	)}
    <ArchivePanel sortedPosts={sortedPostsList} client:only="svelte"></ArchivePanel>
</MainGridLayout>

